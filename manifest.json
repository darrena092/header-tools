{
  "manifest_version": 2,
  "name": "HeaderTools",
  "description": "A plugin for manipulating request headers",
  "version": "1.0",
  "browser_action": {
    "default_popup": "build/index.html",
    "default_icon": "htlogosq.png"
  },
  "permissions": [
    "webRequest", "webRequestBlocking", "storage", "<all_urls>"
  ],
  "background": {
    "scripts": ["service/background.js"],
    "persistent": true
  }
}
